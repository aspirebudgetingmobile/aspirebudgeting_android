<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aspireDarkPrimaryColor"
    android:orientation="vertical">
    <TextView
        android:fontFamily="@font/open_sans"
        android:id="@+id/widget_row_catagoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_margin="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="horizontal">
        <TextView
            android:fontFamily="@font/open_sans"
            android:id="@+id/widget_row_availableAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#3AC28F"
            android:layout_margin="8dp"/>
        <TextView
            android:fontFamily="@font/open_sans"
            android:id="@+id/widget_row_spentAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#CE7976"
            android:layout_margin="8dp"/>
        <TextView
            android:fontFamily="@font/open_sans"
            android:id="@+id/widget_row_budgetedAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#BF9938"
            android:layout_margin="8dp"/>
    </LinearLayout>
</LinearLayout>